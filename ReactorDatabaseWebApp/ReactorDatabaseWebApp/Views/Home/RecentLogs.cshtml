@using ReactorDatabaseWebApp.Models
@model List<LogPO>
@{
    ViewBag.Title = "RecentLogs";
}

<h2>Recent Warning Logs</h2>

@if (Model.Count > 0)
{
    <div class="wrapper">
        <p>Below is a list of recent 'warning' level logs collected from site activity.</p>
        <p>Consult log files to see log history, other log levels, or greater depth of log information.</p><br />
        <table class="table-striped table-hover" id="logTable">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (LogPO logPO in Model)
                {
                    <tr>
                        <td>[@logPO.Timestamp]</td>
                        <td>@logPO.Message</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No warning logs in database.</p>
}