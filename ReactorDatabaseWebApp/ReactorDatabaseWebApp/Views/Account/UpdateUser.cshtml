@using ReactorDatabaseWebApp.Models
@model UserPO
@{
    ViewBag.Title = "UpdateUser";
}

<h2>Edit User Information</h2>

@using (Html.BeginForm("UpdateUser", "Account", FormMethod.Post))
{
    <div class="form-horizontal">
        @Html.HiddenFor(model => Model.UserID)

        @if (int.TryParse(Session["Role"].ToString(), out int role) && role >= 3)
        {
            @Html.LabelFor(model => Model.RoleID)
            <div class="form-group">
                @Html.DropDownListFor(model => Model.RoleID, Model.RoleDropDown, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.RoleID, null, new { @class = "text-danger" })
            </div>
        }
        else
        {
            @Html.HiddenFor(model => Model.RoleID)
        }

        @Html.LabelFor(model => Model.Username)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.Username, null, new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(model => Model.Password)

        @Html.LabelFor(model => Model.FirstName)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.FirstName, null, new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => Model.LastName)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.LastName, null, new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => Model.Age)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Age, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.Age, null, new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => Model.Email)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.Email, null, new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => Model.Subscription)
        <div class="form-group">
            @Html.CheckBoxFor(model => Model.Subscription, new { @class = "form-control" })
        </div>

        <input class="btn btn-success" type="submit" value="Update" />
    </div><br />

    <p>@Html.ActionLink("Update password", "ChangePassword", "Account", new { username = Model.Username }, null) (Clicking this link will discard changes on the current update form)</p>
}